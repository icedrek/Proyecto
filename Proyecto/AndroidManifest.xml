            android:name="net.syncrom.proyecto.EmpresasProvider"
            android:authorities="net.syncrom.proyecto" />

        <activity
            android:name="net.syncrom.proyecto.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.syncrom.proyecto.AltaActivity"
            android:label="@string/title_activity_alta" >
        </activity>
        <activity
            android:name="net.syncrom.proyecto.AccesoActivity"
            android:label="@string/title_activity_acceso" >
        </activity>
        <activity
            android:name="net.syncrom.proyecto.BajaActivity"
            android:label="@string/title_activity_baja" >
        </activity>
        <activity
            android:name="net.syncrom.proyecto.ConsultaActivity"
            android:label="@string/title_activity_consulta" >
        </activity>
        <activity
            android:name="net.syncrom.proyecto.ResConsultaActivity"
            android:label="@string/title_activity_res_consulta" >
